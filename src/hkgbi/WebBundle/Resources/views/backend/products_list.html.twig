{% for product in products %}
    <li>
        <span class="text"><input id="product_sort" type="text" value="{{ product.sort }}" pid="{{ product.id }}" style="width: 25px"></span>
        <span class="text">{{ product.name }}</span>
        <div class="tools">
            <a href="javascript:void(0)" id="value_list_button" value="{{ product.id }}" data-toggle="tooltip" data-placement="top" title="点击查看基金净值数据"><i class="fa fa-line-chart"></i></a>
            <a href="{{ path('edit_product',{'id':product.getId()}) }}"><i class="fa fa-edit" style="font-size:18px"></i></a>
            <a href="javascript:void(0)" onclick="deleteproduct({{ product.id }})"><i class="fa fa-trash-o" style="font-size:18px"></i></a>
        </div>
    </li>
{% endfor %}