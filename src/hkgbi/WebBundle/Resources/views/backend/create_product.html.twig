{% extends "@hkgbiWeb/backend/layout_admin.html.twig" %}
{% block page_header %}新建私募基金{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <!-- tools box -->
                    <div class="pull-right box-tools">
                        <button class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                    </div><!-- /. tools -->
                </div><!-- /.box-header -->
                <div class="box-body pad">
                    <form method="post" action="{{ path('newproduct') }}">
                        <input type="text" placeholder="请输入基金名称" style="width:300px;height:35px" class="form-group" id="product_name" name="product[name]">
                        <input type="text" placeholder="请输入基金类型" style="width:20%;height:35px;margin-left:50px;display:inline-block" class="form-group" id="product_type" name="product[type]">
                        <span style="margin-left: 50px">成立日期</span>
                        {{ form_widget(form.created_date,{'attr':{'style':'width:20%;height:35px;display:inline-block'}}) }}
                        <script id="container" name="product[product_overview]" type="text/plain"></script>
                        <button class="btn btn-instagram" type="submit">提交</button>
                        {{ form_widget(form._token) }}
                    </form>
                </div>

            </div>
        </div>
    </div>

{% endblock %}

{% block private_js %}
    {#富文本编辑器#}
    <script src="{{ asset('ueditor/ueditor.config.js') }}"></script>
    <script src="{{ asset('ueditor/ueditor.all.js') }}"></script>
    <script type="text/javascript">
        var ue = UE.getEditor('container',{
            toolbars:[
                [
                    'fullscreen', 'source', '|', 'undo', 'redo', '|', 'bold','italic', 'underline',
                    'strikethrough',  'pasteplain', 'preview', 'removeformat', 'unlink','cleardoc',
                    'fontfamily', 'fontsize', 'simpleupload', 'insertimage','link','emotion','justifyleft',
                    'justifyright','justifycenter','justifyjustify', 'forecolor','backcolor', 'attachment',
                    'imagecenter','autotypeset','inserttable','charts',

                ]
            ]
        });
    </script>
{% endblock %}